{% extends 'base.html.twig'%}

{% block title 'Nouvelle annonce' %}
{% block body %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="boxForm create mt-3">
                <div class="container flexRow pb-0">
                    <div class="headerCreate">
                        <img class="imgFormCreate" src={{asset('build/image/personnage/' ~ annonce.user.image)}} style=width:100%/> 
                        <label class="formHeader" for="">Moi aussi je troque ma carotte !</label>
                    </div>
                    <div class="trocSummary">
                        <ul class="flexRow">
                            <li><img class="imgFormCreateSummary" id="imgCarotteSummary" src={{asset('build/image/autre/interrogation.png')}} style=width:100%/> </li>
                            <li><img class="imgFormCreateSummary" src={{asset('build/image/autre/correspondance.png')}} style=width:100%/> </li>
                            <li><img class="imgFormCreateSummary" id="imgContreCarotteSummary" src={{asset('build/image/autre/interrogation.png')}} style=width:100%/> </li>
                        </ul>
                    </div>
                </div>

                {{ form_start(form) }}
                <hr class="rounded"></hr>
                    <div class="container flexRow mt-4 pb-0">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-4">
                                    <label for="mon_annonce_CarotteATroquer" class="col labelCarotteForm noPadding">Ma carotte :</label>
                                </div>
                                <div class="col-8">
                                    <span>{{ form_widget(form.CarotteATroquer) }}</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label for="mon_annonce_Quantity" class="col noPadding labelCarotteForm">Quantité :</label>
                                </div>
                                <div class="col-8 flexRow">
                                    <span class="form-control-plaintext form-control-sm" id="mon_annonce_Quantity">{{ form_widget(form.Quantity) }}</span>
                                    <span class="unity">{{ form_widget(form.Unite) }}</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label for="contreCarotte" class="col labelCarotteForm noPadding">Bio :</label>
                                </div>
                                <div class="col-8">
                                    <span class="form-control-plaintext form-control-sm noPadding" id="contreCarotte"> {{ form_widget(form.Bio) }}</span>
                                </div>
                            </div>
                            <div class="row mt-5">
                                <div class="col-4">
                                    <label for="contreCarotte" class="col labelCarotteForm noPadding">Ma ville :</label>
                                </div>
                                <div class="col-8">
                                    <span class="form-control-plaintext form-control-sm noPadding" id="contreCarotte"> {{ form_widget(form.ville) }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-4">
                                    <label for="mon_annonce_ContreCarotte" class="col labelCarotteForm noPadding">Contre :</label>
                                </div>
                                <div class="col-8">
                                    <span class="unity">{{ form_widget(form.ContreCarotte) }}</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label for="contreCarotte" class="col labelCarotteForm noPadding">Quantité :</label>
                                </div>
                                <div class="col-8 flexRow">
                                    <span class="form-control-plaintext form-control-sm" id="contreCarotte">{{ form_widget(form.ContreQuantite) }}</span>
                                    <span class="unity">{{ form_widget(form.ContreUnite) }}</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <label for="contreCarotte" class="col labelCarotteForm noPadding">Bio :</label>
                                </div>
                                <div class="col-8">
                                    <span class="form-control-plaintext form-control-sm noPadding" id="contreCarotte"> {{ form_widget(form.ContreBio) }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container mt-4 pb-0">
                        {{ form_row(form.Description) }}
                    </div>
                    <div class="row justify-content-md-center">
                        <p>
                            <input type="submit" class="btn btn-primary BtnValid" value="C'est parti !"/>
                        </p>   
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}