


{% extends 'base.html.twig'%}

{% block title 'Détail du troc' %}
{% block body %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="boxForm create mt-3">
                <div class="container flexRow pb-0">
                    <div class="headerCreate">
                        <img class="imgFormCreate" src={{asset('build/image/personnage/' ~ annonce.user.image )}} style=width:100%/> 
                        <label class="formHeader" for="">Troc proposé par {{ annonce.user.prenom }}</label>
                    </div>
                    <div class="trocSummary">
                        <ul class="flexRow">
                            <li><img class="imgFormCreateSummary" src={{asset('build/image/legume/' ~ annonce.CarotteATroquer.image )}} style=width:100%/> </li>
                            <li><img class="imgFormCreateSummary" src={{asset('build/image/autre/correspondance.png')}} style=width:100%/> </li>
                            <li><img class="imgFormCreateSummary" src={{asset('build/image/legume/' ~ annonce.ContreCarotte.image )}} style=width:100%/> </li>
                        </ul>
                    </div>
                </div>

                <hr class="rounded"></hr>
                <div class="container flexRow mt-4 pb-0">
                    <div class="col-6 boxShow">
                        <div class="row">
                            <div class="col-4">
                                <label for="mon_annonce_CarotteATroquer" class="col labelCarotteForm noPadding">Troque :</label>
                            </div>
                            <div class="col-8">
                                <input readonly class="form-control-plaintext form-control-sm important" value="{{ annonce.CarotteATroquer.nom }}"</input>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <label for="mon_annonce_Quantity" class="col noPadding labelCarotteForm">Quantité :</label>
                            </div>
                            <div class="col-8">
                                <input readonly class="form-control-plaintext form-control-sm" value="{{ annonce.Quantity}} {{ annonce.Unite }}"</input>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <label for="contreCarotte" class="col labelCarotteForm noPadding">Bio :</label>
                            </div>
                            <div class="col-8">
                                <input readonly class="form-control-plaintext form-control-sm noPadding" value="{{ annonce.Bio }}"</input>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-4">
                                <label for="contreCarotte" class="col labelCarotteForm noPadding">Où ça :</label>
                            </div>
                            <div class="col-8">
                                <input readonly class="form-control-plaintext form-control-sm noPadding important" id="contreCarotte" value="{{ annonce.ville }}"</input>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4">
                                <label for="mon_annonce_ContreCarotte" class="col labelCarotteForm noPadding">Contre :</label>
                            </div>
                            <div class="col-8">
                                <input readonly class="form-control-plaintext form-control-sm noPadding important" value="{{ annonce.ContreCarotte }}"</input>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <label for="contreCarotte" class="col labelCarotteForm noPadding">Quantité :</label>
                            </div>
                            <div class="col-8">
                                <input readonly class="form-control-plaintext form-control-sm" value="{{ annonce.ContreQuantite }} {{ annonce.ContreUnite }}"</input>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <label for="contreCarotte" class="col labelCarotteForm noPadding">Bio :</label>
                            </div>
                            <div class="col-8">
                                <input readonly class="form-control-plaintext form-control-sm noPadding" value="{{ annonce.ContreBio }}"</input>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container mt-4 pb-0">
                    <div class="row">
                        <div class="col-4">
                            <label for="contreCarotte" class="col labelCarotteForm noPadding">Message :</label>
                        </div>
                    </div>
                    <div class="row">
                         <input readonly class="form-control-plaintext form-control-sm" value="{{ annonce.Description }}"></input>
                    </div>
                </div>
                    <div class="row justify-content-md-center">
                        <p>
                            <input type="submit" class="btn btn-primary BtnValid mt-3" value="Je contacte !"/>
                        </p>   
                    </div>
            </div>
        </div> 
    </div>
{% endblock %} 